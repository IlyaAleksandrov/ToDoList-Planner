<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane fx:controller="sample.DialogPaneController"
            xmlns:fx="http://javafx.com/fxml">

    <content>
        <GridPane vgap="12" hgap="12">
            <Label text="Short Discription" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="ShortDiscription" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label text="Long Discription" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextArea fx:id="LongDiscription" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <Label text="Date" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <DatePicker fx:id="DateDiscription" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        </GridPane>
    </content>
</DialogPane>
